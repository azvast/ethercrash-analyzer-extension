{
    "name": "BC.Game Analyzer",
    "version": "1.0.0",
    "description": "BC.Game Analyzer chrome extension",
    "manifest_version": 3,
    "author": "azvast",
    "action":{
        "default_popup": "index.html",
        "default_title": "BC.Game Analyzer"
    },
    "content_scripts": [
        {
            "matches": ["https://www.ethercrash.io/play/*"],
            "js": ["document_end.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["inject.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": [
        "activeTab",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": ["*://*/*"]
}
